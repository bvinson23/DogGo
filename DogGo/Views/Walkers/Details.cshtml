@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Walker Profile";
}

<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px" class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <section class="col-8 container mt-5">
        <h1 class="text-left">Recent Walks</h1>

        <div class="row">
            @foreach (Walks walk in Model.Walks)
            {
                <div class="card-body">
                    <div>
                        <label class="font-weight-bold">Date:</label>
                        <span>@walk.Date</span>
                    </div>
                    <div>
                        <label class="font-weight-bold">Dog:</label>
                        <span>@walk.Dog.Name</span>
                    </div>
                    <div>
                        <label class="font-weight-bold">Client:</label>
                        <span></span>
                    </div>
                    <div>
                        <label class="font-weight-bold">Duration:</label>
                        <span>@walk.Duration</span>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
